  <body>

     <h1>Show Items for Sale</h1>
  
      <div class='col-sm-12 col-md-8 text-sm-center text-md-left'>
        <h3>Games Posted for Sale</h3>
        <p class='lead'> Below are games waiting for admin approval</p>
        
        <%items.forEach(function(item){ %>
        
        <table>
          <tr class='table'>
              <th>Item Title: </th>
              <th>Console Type:</th>
              <th>Condition:</th>
              <th>Quantity:</th>
              <form class="" action="/admin/<%=item.id%>?_method=POST" method="POST">
              <input name="price">
              <button type="submit" class='btn btn-primary btn-sm' name="button">Offer Price</button>
              </form>
          </tr>
              <tr>
              <td><%= item.title %></td>
              <td><%= item.platform %></td>
              <td><%= item.condition %></td>
              <td><%= item.quantity %></td>
              </tr>

        </table>
        <% }) %>

      </div>
   <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>

  
